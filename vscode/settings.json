{
    "editor.fontFamily": "Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 12,
    "editor.fontWeight": "500",
    "editor.lineHeight": 0,
    "editor.cursorStyle": "line", // カーソルのスタイル
    "editor.cursorBlinking": "smooth", // カーソルの点滅アニメーションスタイル
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.renderWhitespace": "boundary",
    "editor.formatOnType": true, // 区切り文字をタイプしたときに自動でフォーマットする
    "editor.formatOnPaste": true, // 貼り付けしたときに自動でフォーマットする
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.copyOnSelection": true, // ターミナルでのコピーを許可する
    "window.zoomLevel": 1,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "search.exclude": { // 検索除外対象
        "**/node_modules": true
    },
    "workbench.colorTheme": "Dracula", // 配色テーマ
    "python.linting.lintOnSave": true,
    "python.linting.pylintEnabled": false,
    "python.linting.pycodestyleEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--ignore=W293, W504",
        "--max-line-length=150",
        "--max-complexity=20"
    ],
    "python.formatting.provider": "autopep8",
    "python.formatting.autopep8Args": [
        "--aggressive", "--aggressive",
    ],
    "autoDocstring.docstringFormat": "google",
    "[python]": {
        "editor.detectIndentation": false, // ファイルを開くときにインデントを自動的に検出するか
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "files.associations": { // 拡張子と言語を関連付ける
        "*.py3": "python"
    },
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "todo-tree.tree.showScanModeButton": false,
    "[sql]": {
        "editor.detectIndentation": false,
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "git.autofetch": true,
    "python.jediEnabled": false,
    "sync.gist": "b18178e9cf5500ce37e53be4ab418795"
}